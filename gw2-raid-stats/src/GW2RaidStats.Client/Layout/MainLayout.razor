@inherits LayoutComponentBase
@inject HttpClient Http

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu"
                       Color="Color.Inherit"
                       Edge="Edge.Start"
                       OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">@_guildName</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                       Color="Color.Inherit"
                       OnClick="@ToggleDarkMode"
                       aria-label="@(_isDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")" />
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDarkMode = true;
    private string _guildName = "GW2 Raid Stats";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<GuildNameResponse>("api/settings/guild-name");
            if (response != null && !string.IsNullOrEmpty(response.GuildName))
            {
                _guildName = response.GuildName;
            }
        }
        catch
        {
            // Use default if API fails
        }
    }

    private MudTheme _theme = new()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#2B8A8A",
            Secondary = "#B5533F",
            AppbarBackground = "#2B8A8A",
            Background = "#f5f5f5",
            Surface = "#ffffff"
        },
        PaletteDark = new PaletteDark()
        {
            Primary = "#2B8A8A",
            Secondary = "#B5533F",
            Surface = "#1e1e1e",
            Background = "#121212",
            AppbarBackground = "#1e1e1e"
        },
        Typography = new Typography()
        {
            Default = new DefaultTypography()
            {
                FontFamily = new[] { "Roboto", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
    private void ToggleDarkMode() => _isDarkMode = !_isDarkMode;

    private record GuildNameResponse(string GuildName);
}
